//int baseStartANGL = 200;

//Arm angles
int aShortTowerApproach = 1675;
int aShortTowerAfter = 756;
int aHighTower = 300;

//Pitch angles
int pBackHigh = 1150;
int pHighTower = 1850;
int pShortTower = 1600;
int pShortTower2 = 1800;

//Claw angles
int clawOpen = 1200;
int clawClose = 220;

//Starting Angles
int armStart = 0;
int pitchStart = 0;
int clawStart = 0;

//Drop Angles
int pDrop = 1490;
int aDrop = 1300;
int aDropShort = 1550;
int storeANGL = 0; //amount the claw bounces back after setting the base
int ShortStoreANGL =0;

double sleepTime = 0;
time_t start, stop;

int main()
{
    create_connect();
    enable_servos();
    //create_full();
    
    
    int capsule01[] = {800, 1500, clawOpen};
    set_position(15, capsule01);
    setBase();   
    
    printf("1\n");
    int posCapsuleStart[] = {1900, 1400, 670};
    set_position(15, posCapsuleStart); 
    posCapsuleStart[1] = 1800;
    set_position(15, posCapsuleStart);
    
    msleep(100);
    wait_for_light(3);
    start = time(NULL);
    shut_down_in(120);
    
    printf("2\n");
	posCapsuleStart[1] = 1400;
    set_position(15, posCapsuleStart); 
    int capsule02[] = {1000, 1500, clawOpen};
    set_position(15, capsule02);
    capsule02[2] = clawClose;
    set_position(15, capsule02);
    
    printf("3\n");

    
    
    
    fwd2tape();
    msleep(100);
    sleepTime += 0.1;
    while(get_create_lbump()==0 && get_create_rbump()==0)
    {
        create_drive_direct(220, 200);
    }
    create_drive_direct(-200,-200);
    msleep(50);
    sleepTime += 0.05;
    create_stop();
    msleep(100);
    sleepTime += 0.1;
    startingTurn();
    msleep(100);
    sleepTime += 0.1;
    create_stop();
    
    create_drive_direct(-200,-200);
    msleep(470);
    sleepTime += 0.47;
    
    create_stop();
    msleep(1000);
    sleepTime += 1;
    //End of alignment code
    

    int NavCache[5] = {4, 4, 2, 1, 5};
    NavMaster(NavCache);
    
    create_stop();
    while(totalTime() < 110){
        msleep(500);
        sleepTime += 0.5;
        printf("Waiting: %f sec\n", totalTime());
   	}
    
    REVrailDist(30);
    
	turnLDeg(90, 150);
    rev2tape();
    
    turnRDeg(30, 150);
    setBase();
    set_servo_position(2, clawOpen);
    msleep(100);
    sleepTime += 0.1;
    
    mav(1, -1000); //opens cube chute
    msleep(500);
    sleepTime += 0.5;
    ao();
    
    
    disable_servos();
    create_disconnect();
    return 0;
}

void baseTower()
{
    cmpc(0);
    while(gmpc(0) < baseANGL)
    {
        mav(0, 300);
    }
    ao();
    freeze(0);
}

